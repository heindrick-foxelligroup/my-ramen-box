{%- style -%}
:root {
	/*General*/
	--bkg_body: {{ settings.body_bkg_color | default: '#fff' }}; /*body background*/
	--bkg_body_rgb: {{ settings.body_bkg_color | default: '#fff' | color_to_rgb | remove: 'rgb(' | remove: 'rgba(' | remove: ')' | remove: ', 0.0' }};
	--color_general: {{ settings.color_general | default: '#222' }}; /*general color*/
	--color_general_rgb: {{ settings.color_general | default: '#222' | color_to_rgb | remove: 'rgb(' | remove: 'rgba(' | remove: ')' | remove: ', 0.0' }};
	--color_hover: {{ settings.color_general_hover | default: '#d9121f' }};
	--color_link_alternative: {{ settings.color_link_alternative | default: '#cb9400' }};
	--color_general_alternative_hover: {{ settings.color_general_alternative_hover | default: '#e9aa00' }};
	
	--fs_general: {{ settings.fs_general }}px;/*font size general*/
	--fm_general: {{ base_font.family }}, {{ base_font.fallback_families }};
	--font_style_general: {{ base_font.style }};
  --font_weight_general: {{ base_font.weight }};
  --font-weight-general--bold: {{ base_font_bold.weight | default: 700 }};
  --font-weight-general--bolder: {{ base_font_bolder.weight | default: 700 }};
  
  --fm_second: {{ heading_font.family }}, {{ heading_font.fallback_families }};
  --font_style_second: {{ heading_font.style }};
  --font_weight_second: {{ heading_font.weight }};
  --font_weight_second--bold: {{ heading_font_bold.weight }};

	/*Header*/
	--fs_header_link_mobile: {{ settings.fs_header_link_mobile | default: 19 }}px;/*done*/
	--bkg_header_mobile: {{ settings.bkg_header_mobile | default: '#fff' }};
	--color_header_mobile: {{ settings.color_header_mobile | default: '#222' }};
	
	/*Section title*/
	--fs_st: {{ settings.fs_st }}px;/*font size section title*/
	--fs_st_mobile: {{ settings.fs_st_mobile }}px;/*font size section title mobile*/
	--color_st: {{ settings.color_st | default: '#000' }};/*color section title*/
	--color_st_highline: {{ settings.color_st_highline | default: '#a38255' }};/*color section highline title*/

	/*Sections Sub Title*/
	--fs_sst: {{ settings.fs_sst }}px;/*font size section title*/
	--fs_sst_mobile: {{ settings.fs_sst_mobile }}px;/*font size section title mobile*/
	--color_sst: {{ settings.color_sst | default: '#ccc' }};/*color section title*//*done*/

	/*Item*/
	--fs_item: {{ settings.fs_item }}px;/*font size item*/
	--color_item: {{ settings.color_item | default: '#000' }};
	--fs_price: {{ settings.fs_price }}px;
	--fs_compare_price: {{ settings.fs_compare_price }}px;
	--color_price: {{ settings.color_price | default: '#d9121f' }};
	--color_compare_price: {{ settings.color_compare_price | default: '#000' }};
	--swatch_size: {{ settings.swatch_size }}px;
	--swatch_border_color: {{ settings.swatch_border_color | default: '#ccc' }};
	--color_countdown: {{ settings.color_countdown | default: '#000' }};
	--bkg_countdown: {{ settings.bkg_countdown | default: '#e8e8e8' | color_modify: 'alpha', 0.8 }};
	--item_vendor_color: {{ settings.item_vendor_color }};
	--item_vendor_fs: {{ settings.item_vendor_fs }}px;

	/* RTE */
	--fs_rte_general: {{ settings.fs_rte_general }}px;
	--fs_rte_h1: {{ settings.fs_rte_h1 }}px;
	--fs_rte_h2: {{ settings.fs_rte_h2 }}px;
	--fs_rte_h3: {{ settings.fs_rte_h3 }}px;
	--fs_rte_h4: {{ settings.fs_rte_h4 }}px;
	--fs_rte_h5: {{ settings.fs_rte_h5 }}px;
	--fs_rte_h6: {{ settings.fs_rte_h6 }}px;

	/* Promotion */
	--promo_text_color: {{ settings.promo_text_color }};
	--promo_fs_mobile: {{ settings.promo_fs_mobile }}px;
	--promo_fs_dk: {{ settings.promo_fs_dk }}px;
	
	/*Buttons*/
	/*button style 1*/
	--color_btn_s1: {{ settings.color_btn_s1 | default: '#222' }};
	--border_btn_s1: {{ settings.border_btn_s1 | default: '#ccc' }};
	--bkg_btn_s1: {{ settings.bkg_btn_s1 | default: '#fff' }};
	--color_btn_s1_hover: {{ settings.color_btn_s1_hover | default: '#fff' }};
	--border_btn_s1_hover: {{ settings.border_btn_s1_hover | default: '#d9121f' }};
	--bkg_btn_s1_hover: {{ settings.bkg_btn_s1_hover | default: '#d9121f' }};
	
	/* button style 2 */
	--color_btn_s2: {{ settings.color_btn_s2 | default: '#fff' }};
	--border_btn_s2: {{ settings.border_btn_s2 | default: '#d9121f' }};
	--bkg_btn_s2: {{ settings.bkg_btn_s2 | default: '#d9121f' }};
	--color_btn_s2_hover: {{ settings.color_btn_s2_hover | default: '#fff' }};
	--border_btn_s2_hover: {{ settings.border_btn_s2_hover | default: '#222' }};
	--bkg_btn_s2_hover: {{ settings.bkg_btn_s2_hover | default: '#222' }};
	/*button style 3*/
	--color_btn_s3: {{ settings.color_btn_s3 | default: '#fff' }};
	--border_btn_s3: {{ settings.border_btn_s3 | default: '#222' }};
	--bkg_btn_s3: {{ settings.bkg_btn_s3 | default: '#222' }};
	--color_btn_s3_hover: {{ settings.color_btn_s3_hover | default: '#222' }};
	--border_btn_s3_hover: {{ settings.border_btn_s3_hover | default: '#222' }};
	--bkg_btn_s3_hover: {{ settings.bkg_btn_s3_hover | default: '#fff' }};
	
	/* cart button on product page */
	--color_btn_cart: {{ settings.color_btn_cart | default: '#fff' }};
	--bkg_btn_cart: {{ settings.bkg_btn_cart | default: '#169214' }};
	--color_btn_cart_hover: {{ settings.color_btn_cart_hover }};
	--bkg_btn_cart_hover: {{ settings.bkg_btn_cart_hover }};

	/*Tab title*/
	--fs_tt: {{ settings.fs_tt }}px;/*font size tab title*/
	--fs_tt_mobile: {{ settings.fs_tt_mobile }}px;/*font size tab title mobile*/
	--color_tt: {{ settings.color_tt | default: '#999' }};/*color tab title*/
	--color_tt_hover: {{ settings.color_tt_hover | default: '#fff' }};/*color tab title hover*/
	--tab_border_item_single: {{ settings.color_general | color_modify: 'alpha', 0.1 }};

	/*Navigation*/
	--bkg_select_dropdown: {{ settings.bkg_select_dropdown | default: '#fff' }};/*background dropdown nav item*/
	--color_link: {{ settings.color_link | default: '#000' }}; /*color link*/
	--bkg_nav_item_hover: transparent;/*background nav item hover*/
	--color_nav_item_hover: {{ settings.color_nav_item_hover | default: '#d9121f' }};/*color nav item hover*/
	
	/* Sidebar Canvas */
	--bkg_sidebar_canvas: {{ settings.bkg_sidebar_canvas | default: '#fff' }};
	
	/* Slider */
	--slider_btn_color: {{ settings.slider_btn_color }};
	--slider_btn_hover_color: {{ settings.slider_btn_hover_color }};
	{%- unless enable_rtl -%}
	--arrow-prev-content: '\e93b';
	--arrow-next-content: '\e93a';
	--arrow-prev-title-content: '\e879';
	--arrow-next-title-content: '\e87a';
	{%- else -%}
	--arrow-prev-content: '\e93a';
	--arrow-next-content: '\e93b';
	--arrow-prev-title-content: '\e87a';
	--arrow-next-title-content: '\e879';
	{%- endunless -%}

	/* Cart progress bar */
	--cart_free_bkg: {{ settings.cart_free_bkg }};
	--cart_free_bar_color: {{ settings.cart_free_bar_color }};
	--cart_free_text_color: {{ settings.cart_free_text_color }};

	--cookie_consent_color: {{ settings.cookie_consent_color }};

	/*Footer*/
	--bkg_footer: {{ settings.bkg_footer | default: '#ccc' }};/*background footer*/
	--fs_footer_column_title: {{ settings.fs_footer_column_title }}px;/*font size footer column title*/
	--color_footer_column_title: {{ settings.color_footer_column_title | default: '#222' }};/*color footer column title*/
	--fs_footer_column_content: {{ settings.fs_footer_column_content }}px;/*font size footer column content*/
	--color_footer_column_content: {{ settings.color_footer_column_content | default: '#8a8282' }};/*color footer column content*/
	--color_footer_column_content_hover: {{ settings.color_footer_column_content_hover | default: '#222' }}; /*color footer link hover*/
	--color_footer_column_content_hover_alpha80: {{ settings.color_footer_column_content_hover | default: '#222' | color_modify: 'alpha', 0.8 }}; /*color footer link hover*/
	--footer_news_color: {{ settings.footer_news_color }};
	--footer_news_bkg: {{ settings.footer_news_bkg }};
	--footer_social_color: {{ settings.footer_social_color }};
	--footer_social_fs: {{ settings.footer_social_fs }}px;
	
	/*Input field*/
	--border_input: {{ settings.border_input | default: '#a7a1a1' }};/*border color input*/
	--border_input_focus: {{ settings.border_input_focus | default: '#4285f4' }};/*border color input focus*/

	/*Blog page*/
	--color_date_author: {{ settings.blog_color_date_author | default: '#999' }};
	--color_article_title: {{ settings.blog_color_article_title | default: '#2a302d' }};

	/*Product page*/
	--bkg_product_single: {{ settings.bkg_product_single | default: '#d6f3ee' }};
	--fs_product_price_sale_single: {{ settings.fs_product_price_sale_single }}px;
	--fs_product_price_sale_single_mobile: {{ settings.fs_product_price_sale_single_mobile }}px;
	--color_border_qty: {{ settings.color_border_qty | default: '#ccc' }};
	--color_discount_text_single: {{ settings.color_discount_text_single }};
	--buy_btn_color: {{ settings.buy_btn_color }};
	--buy_btn_bkg_color: {{ settings.buy_btn_bkg_color }};
	--buy_btn_border_color: {{ settings.buy_btn_border_color }};
	--buy_btn_color_hover: {{ settings.buy_btn_color_hover }};
	--buy_btn_bkg_color_hover: {{ settings.buy_btn_bkg_color_hover }};
	--buy_btn_border_color_hover: {{ settings.buy_btn_border_color_hover }};
	--sticky_cart_bkg: {{ settings.body_bkg_color | color_modify: 'alpha', 0.97 }};

	/* Page title */
	--fs_page_title: {{ settings.fs_page_title }}px;
	--fs_page_title_dk: {{ settings.fs_page_title_dk }}px;
}
{%- endstyle -%}