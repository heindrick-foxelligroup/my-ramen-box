{% comment %} code to assign subscription box {% endcomment %}
{% assign item_is_sub_box = false %}
{% for p in item.properties %}
    {% if p.first == 'shipping_interval_frequency' %}
        {% assign item_is_sub_box = true %}
    {% endif %}
{% endfor %}

{% if item.product.type == "subscription box" %}
	{% assign item_is_sub_box = true %}
{% endif %}

{% assign item_is_indyprep = false %}
{% if item.vendor == 'INDYPREP' %}
    {% assign item_is_indyprep = true %}
{% endif %}

  {% if item_is_sub_box == true %}
    <div class="cart-subox-message">
      <p>- First box ships immediately</p>
      <p>- Following boxes ship on the 7th of each month</p>
      <p>- Cancel anytime</p>
	</div>
  {% endif %}
  <div class="cart-subox-delivery-message" style="font-size: 13px; color: #EFBD3F">
    <span class="cart-subox-fast-icon">
      <svg width="17px" 
           height-"17px"="" 
           aria-hidden="true" 
           focusable="false" 
           data-prefix="fas" 
           data-icon="shipping-fast" 
           class="svg-inline--fa fa-shipping-fast fa-w-17" 
           role="img" 
           xmlns="http://www.w3.org/2000/svg" 
           viewBox="0 0 640 512">
        <path fill="currentColor" 
              d="M624 352h-16V243.9c0-12.7-5.1-24.9-14.1-33.9L494 110.1c-9-9-21.2-14.1-33.9-14.1H416V48c0-26.5-21.5-48-48-48H112C85.5 0 64 21.5 64 48v48H8c-4.4 0-8 3.6-8 8v16c0 4.4 3.6 8 8 8h272c4.4 0 8 3.6 8 8v16c0 4.4-3.6 8-8 8H40c-4.4 0-8 3.6-8 8v16c0 4.4 3.6 8 8 8h208c4.4 0 8 3.6 8 8v16c0 4.4-3.6 8-8 8H8c-4.4 0-8 3.6-8 8v16c0 4.4 3.6 8 8 8h208c4.4 0 8 3.6 8 8v16c0 4.4-3.6 8-8 8H64v128c0 53 43 96 96 96s96-43 96-96h128c0 53 43 96 96 96s96-43 96-96h48c8.8 0 16-7.2 16-16v-32c0-8.8-7.2-16-16-16zM160 464c-26.5 0-48-21.5-48-48s21.5-48 48-48 48 21.5 48 48-21.5 48-48 48zm320 0c-26.5 0-48-21.5-48-48s21.5-48 48-48 48 21.5 48 48-21.5 48-48 48zm80-208H416V144h44.1l99.9 99.9V256z">
        </path>
      </svg>
    </span>
    <span class="cart-subox-delivery">(Delivery within {% render 'vendor-shipping-times' with input_vendor:item.vendor %})</span>
  </div>

<style>
  .cart-subox-message,
  .cart-subox-delivery-message { margin-top: 5px }
  .cart-subox-message p { 
    font-size: 13px;
    margin-bottom: 0; } 
</style>