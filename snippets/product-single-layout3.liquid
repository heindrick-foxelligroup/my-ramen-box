{%- if template.suffix != 'quick_view' -%}
{%- unless no_container -%}
<div class="container{% include 'wide-css-class' %} gutter-bottom gutter-ele-bottom-tbs">
{%- endunless -%}    
  <div class="row">
{%- endif -%}
<div class="col-xs-12 col-md-5 no-gutter-left-mb no-gutter-right-mb{% if enable_rtl %} f-right{% endif %}">
  {%- include 'product-single-media' -%}
</div>

<div class="col-xs-12 col-md-7 gutter-ele-top-tbs">
  <div class="row">
    <div class="col-xs-12 col-md-6{% if enable_rtl %} f-right{% endif %}">
      {%- render 'product-single-vendor' with product: product, gutter_bottom: true -%}
      {%- render 'product-single-name' with product: product -%}
      {%- render 'product-single-sku' with current_variant: current_variant -%}
      {%- render 'product-single-sold' with product: product -%}
      {%- capture review_single_html -%}
        {%- render 'product-review-single' with product: product -%}
      {%- endcapture -%}
      {%- if review_single_html != blank or sizechart -%}
      <div class="flex gutter-ele-top gutter-ele-top-tbs gutter-ele-bottom gutter-ele-bottom-tbs{% if review_single_html != blank and sizechart %} flex-align-space-between{% endif %}">
        {{ review_single_html }}
        {%- render 'product-single-size-chart' with product: product, sizechart: sizechart -%}
      </div>
      {%- endif -%}
      {%- render 'product-single-price' with product: product, current_variant: current_variant -%}
      {%- render 'product-single-short-desc' with product: product, description: description -%}
      <hr style="margin:10px 0;">
      <div class="hidden-xs hidden-sm">
        {%- render 'product-single-countdown' with product: product -%}
        {%- render 'product-single-hurry-up' with current_variant: current_variant -%}
        {%- render 'product-single-sub-info' with product: product -%}
        {%- render 'product-single-social-sharing' with product: product -%}
      </div>
    </div>
    <div class="col-xs-12 col-md-6">
      <div class="w100 hidden-xs hidden-sm" style="margin-top: -10px;"></div>
      <div class="pg__main-options">
        {%- render 'product-single-variants' with product: product -%}
        {%- render 'product-single-form' with product: product, current_variant: current_variant, full_qty_box: false, align_center_button: true, left_holder: left_holder -%}
        {%- render 'product-single-store-availability' with custom_classes: 'gutter-ele-top gutter-ele-bottom' -%}
      </div>
      <div class="hidden-md hidden-lg">
        <hr style="margin:10px 0;">
        {%- render 'product-single-countdown' with product: product -%}
        {%- render 'product-single-hurry-up' with current_variant: current_variant -%}
        {%- render 'product-single-sub-info' with product: product -%}
        {%- render 'product-single-social-sharing' with product: product -%}
      </div>
      {%- render 'product-single-payment-badge' -%}
      {%- render 'product-single-view-details' with product: product -%}
    </div>
    {%- if template.suffix == 'quick_view' -%}
      {%- unless section.settings.general_info contains '[description]' -%}
        <div class="col-xs-12 gutter-ele-top">{{ description }}</div>
      {%- endunless -%}
    {%- endif -%}
  </div>
</div>

{%- if template.suffix != 'quick_view' -%}
</div>
{%- unless no_container -%}
</div>
{%- endunless -%}
{%- endif -%}