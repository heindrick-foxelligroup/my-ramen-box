{%- if obj.settings.show_discount_text and obj.settings.discount_text != blank -%}
<div class="pg__discount-text dib product-price__percent lb-item--sale{% if variant.compare_at_price and variant.compare_at_price > product.price %}{% else %} hide{% endif %}">
		{% if obj.settings.discount_text contains '[percent]' %}
			{%- capture percent -%}<strong class="lb__percent lb__percent--abs">{%- if variant.compare_at_price and variant.compare_at_price > product.price -%}{{ variant.compare_at_price | minus:variant.price | times:100 | divided_by:variant.compare_at_price | floor }}%{%- else -%}0{%- endif -%}</strong>{%- endcapture -%}
			{{ obj.settings.discount_text | replace: '[percent]', percent }}
		{% else %}
			{{ obj.settings.discount_text }}
		{% endif %}
</div>
{%- endif -%}