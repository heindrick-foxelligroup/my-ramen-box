{%- liquid 
  unless settings.enable_rtl and settings.rtl_language_codes contains request.locale.iso_code
    assign left_holder = 'left'
    assign right_holder = 'right'
    assign enable_rtl = false
  else
    assign left_holder = 'right'
    assign right_holder = 'left'
    assign enable_rtl = true
  endunless
-%}
<div id="quotes_{{ section.id }}" class="container{% if section.settings.full_width %}-fluid{% endif %}{% render 'section-gutters-nobkg' %} bq" data-section-id="{{ section.id }}" data-section-type="quotes">
  <div class="row">
    <div class="bq__col bq__col--right col-xs-12 col-sm-4 f-{{ right_holder }}">
      {%- if section.settings.title != blank or section.settings.sub_title != blank or section.settings.btn_text != blank -%}
      <div class="bq__text-block big-gutter-bottom">
        {%- if section.settings.sub_title != blank -%}
        <p class="secondary-font margin0 gutter-bottom bq__sub-title-{{ section.id }}" style="color:{{ section.settings.subtitle_color }};">{{ section.settings.sub_title }}</p>
        {%- endif -%}
        {%- if section.settings.title != blank -%}
        <h2 class="margin0 gutter-bottom bq__title-{{ section.id }}" style="color:{{ section.settings.title_color }};">{{ section.settings.title | raw }}</h2>
        {%- endif -%}
        {%- if section.settings.btn_text != blank -%}
        <a class="button flex-inline flex-align-ver lh1 bq__btn-text-{{ section.id }} distance-top-ele button--style1 button--transparent" href="{{ section.settings.btn_link | default: '#' }}" title="{{ section.settings.btn_text | escape }}" style="font-size:{{ section.settings.btn_fs }}px;">{{ section.settings.btn_text }}{%- unless enable_rtl -%}{%- render 'icon-chevron-right' -%}{%- else -%}{%- render 'icon-chevron-left' -%}{%- endunless -%}</a>
        {%- endif -%}
      </div>
      {%- endif -%}
      <div class="big-gutter-top big-gutter-bottom">
        {%- render 'banner-quotes-image' with 
          image: section.settings.image_3,
          link: section.settings.link_3,
          btn_text: section.settings.btn_text_3,
          section_id: section.id,
          index: 3
        -%}
      </div>
      <div class="big-gutter-top">
        {%- if section.settings.quote_heading != blank -%}
        <h5 class="margin0 gutter-bottom" style="color:{{ section.settings.quote_heading_color }};font-size:{{ section.settings.quote_heading_fs }}px;">{{ section.settings.quote_heading }}</h5>
        {%- endif -%}
        {%- if section.blocks.size > 0 -%}
          <div class="quotes-slider quotes-slider-{{ section.id }} use-slider grid grid--full" data-slider='{"slidesToShow": 1,"arrows":false,"dots":true,"responsive":[{"breakpoint":767,"settings":{"slidesToShow":1}}]}'>
            {%- for item in section.blocks -%}
            <blockquote class="grid__item{% if forloop.index > 1 %} ov-slider-tb ov-slider-mb{% endif %} por quotes-slider__blockquote" {{ block.shopify_attributes }}>
              <span class="quote-icon">{% render 'icon-quote' %}</span>
              <div class="bq__quote-{{ section.id }} secondary-font w100 big-gutter-bottom">{{ item.settings.quote }}</div>
              <span class="bq__quote-author-{{ section.id }} fw-bold">{{ item.settings.title }}</span>
            </blockquote>
            {%- endfor -%}
          </div>
        {%- else -%}
          {% render 'no-blocks' %}
        {%- endif -%}
      </div>
    </div>
    <div class="bq__col bq__col--left col-xs-12 col-sm-7 f-{{ left_holder }}">
      <div class="big-gutter-bottom{% if section.settings.image_bkg_1 != blank %} bq__bkg-{{ section.id }}-1 lazyload{% endif %} distance-bottom-ele"{% if section.settings.image_bkg_1 != blank %} data-bgset="{% render 'bgset' with section.settings.image_bkg_1 as image %}"
       data-sizes="auto"{% endif %}>
        {%- render 'banner-quotes-image' with 
          image: section.settings.image_1,
          link: section.settings.link_1,
          btn_text: section.settings.btn_text_1,
          section_id: section.id,
          index: 1
        -%}
      </div>
      <div class="big-gutter-top{% if section.settings.image_bkg_2 != blank %} bq__bkg-{{ section.id }}-2 lazyload{% else %} big-gutter-bottom{% endif %} distance-bottom-ele"{% if section.settings.image_bkg_2 != blank %} data-bgset="{% render 'bgset' with section.settings.image_bkg_2 as image %}"
       data-sizes="auto" data-index="-100"{% endif %}>
        {%- render 'banner-quotes-image' with 
          image: section.settings.image_2,
          link: section.settings.link_2,
          btn_text: section.settings.btn_text_2,
          section_id: section.id,
          index: 2
        -%}
      </div>
    </div>
    <div class="clearfix"></div>
    <div class="bq__col col-xs-12 col-sm-4 f-{{ left_holder }}">
      <div class="big-gutter-top{% if section.settings.image_bkg_4 != blank %} bq__bkg-{{ section.id }}-4 lazyload{% endif %} distance-bottom-ele"{% if section.settings.image_bkg_4 != blank %} data-bgset="{% render 'bgset' with section.settings.image_bkg_4 as image %}"
