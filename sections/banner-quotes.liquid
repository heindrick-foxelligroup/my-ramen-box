          section_id: section.id,
          index: 5
        -%}
      </div>
    </div>
    {%- if section.settings.bottom_text != blank -%}
    <div class="big-gutter-top col-xs-12 text-center">
      <h3 class="margin0 bg__bottom-text-{{ section.id }} bkg-end dib secondary-font">{{ section.settings.bottom_text | raw }}</h3>
      {%- if section.settings.bottom_btn_text != blank -%}
      <div class="big-gutter-top">
        <a href="{{ section.settings.bottom_link | default: '#' }}" title="{{ section.settings.bottom_btn_text | escape }}" class="button flex-inline flex-align-ver lh1 bg__bottom-btn-{{ section.id }} button--style1 button--transparent">{{ section.settings.bottom_btn_text }}{%- unless enable_rtl -%}{%- render 'icon-chevron-right' -%}{%- else -%}{%- render 'icon-chevron-left' -%}{%- endunless -%}</a>
      </div>
      {%- endif -%}
    </div>
    {%- endif -%}
  </div>
