<style>
  
  
  
  #{{section.id}} .title{
    font-style: normal;
    font-weight: bold;
    font-size: 22px;
    line-height: 30px;
    text-align: center;
    text-transform: uppercase;
    color: #454466; 
    margin-top: 30px;
    margin-bottom: 20px;
  }
  

  
  #{{section.id}} .wrapper{
    padding-left: 15px;
    padding-right: 15px;
  }
  
  #{{section.id}} .content{
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: middle;
    gap: 10px;
  }
  
  #{{section.id}} .content img{
   	width: 45%; 
    height: fit-content;
  }
  
  #{{section.id}} .info-section{
   	display: flex;
    width: 55%;
    flex-direction: column;
   
  }
  
  #{{section.id}} .info-section li{
    font-weight: bold;
    font-size: 14px;
    line-height: 32px;
    color: #454466;
  }
  
  #{{section.id}} .info-section ul{
  	margin-left: auto;
    margin-right: auto;
  }
  
  #{{section.id}} .info-section button{
    background: #E84C35;
	border-radius: 360px;
    height: 42px;
    font-weight: bold;
    font-size: 16px;
    line-height: 19px;
    text-align: center;
    text-transform: uppercase;
    color: #FFFFFF;
    border-width: 0;
    max-width: 171px;
    width: 100%;
    margin-left: auto;
    margin-right: auto;
  }
  
  #{{section.id}} .info-section button:active{
    background: #454466;
  }
  
  @media only screen and (max-width: 990px){
   	#{{section.id}} .ramen-divider{
     	display: none; 
    }
    
    
      #{{section.id}} .divider{
   	width: 100vw;
    margin-left: -15px;
    margin-bottom: 15px;
  }
  }
  
  @media only screen and (min-width: 991px){
    #{{section.id}} .ramen-divider{
     	margin-top: 40px; 
      	margin-bottom: 40px;
    }
    #{{section.id}} .wrapper{
     	max-width: 600px;
      	margin-left: auto;
      	margin-right: auto;
    }
  }
  

</style>

<script>
  $("#{{section.id}} button").click(function() {
    window.location.assign("https://myramenbox.myshopify.com/pages/contact-us");
  });
  
  
</script>

