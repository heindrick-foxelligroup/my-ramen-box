	  },
      {
        "type": "checkbox",
        "id": "enable_on_mobile",
        "label": "Enable on mobile",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "enable_on_desktop",
        "label": "Enable on desktop",
        "default": false
      }
	],
    "presets": [
