<div id="faq-{{ section.id }}" class="container{% if section.settings.full_width %}-fluid{% endif %} faq" data-section-id="{{ section.id }}" data-section-type="faq">
  {%- if section.blocks.size > 0 -%}
  	{%- for block in section.blocks -%}
  		<div class="panel-group" {{ block.shopify_attributes }}>
			  <div class="panel{% if forloop.first %} panel-default{% endif %}">
			    <div class="panel-heading">
			      <h2 class="panel-title">
			        <a data-toggle="collapse" href="#collapse{{ forloop.index }}" class="faq__trigger h3{% unless forloop.first %} collapsed{% endunless %} db w100 gutter-ele-small-bottom faq__trigger--{{ section.id }} por">{{ block.settings.title }}</a>
			      </h2>
			    </div>
			    <div id="collapse{{ forloop.index }}" class="panel-collapse collapse{% if forloop.first %} in{% endif %}">
			      <div class="panel-body rte">{{ block.settings.content }}</div>
			    </div>
			  </div>
			</div>
  	{%- endfor -%}
  {%- endif -%}
</div>
{%- if section.blocks.size > 0 -%}
  {%- liquid
    unless settings.enable_rtl and settings.rtl_language_codes contains request.locale.iso_code
      assign right_holder = 'right'
    else
      assign right_holder = 'left'
    endunless
  -%}
  <style>
    .faq__trigger--{{ section.id }}{
      border-bottom:1px solid rgba(var(--color_general_rgb),0.1);
    }
    .faq__trigger--{{ section.id }}:after{
      position: absolute;
      {{ right_holder }}: 0;
      top: 0;
      bottom: 0;
      font-family: 'BTBeloria';
      content: '\e917';
      font-size: 0.8em;
    }
    .faq__trigger--{{ section.id }}:not(.collapsed){
      border-color: var(--color_general);
    }
    .faq__trigger--{{ section.id }}:not(.collapsed):after{
      content: '\e916';
    }
  </style>
{%- endif -%}
