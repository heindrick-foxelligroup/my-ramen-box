    width: calc(100% - 500px);
  }
  #{{section.id}}.desktop .title {
    font-size: 24px;
    line-height: 32px;
    color: #E84C35;
    font-weight: 900;
  }
  #{{section.id}}.desktop .text {
    font-size: 18px;
    line-height: 24px;
    color: #323050;
    padding: 11px 0;
  }
  #{{section.id}}.desktop .divider img {
