{%- liquid
  if template.suffix != 'quick_view'
    render 'breadcrumbs'
    assign layout_name = section.settings.layout
  else
    assign layout_name = 'normal'
  endif
-%}
{%- if template.suffix != 'quick_view' or request.design_mode -%}
<div class="product-template-section container{% render 'wide-css-class' %} big-gutter-bottom" id="ProductSection-{{ section.id }}" data-section-id="{{ section.id }}" data-section-type="product" data-enable-history-state="true">
{%- endif -%}
  {%- assign current_variant = product.selected_or_first_available_variant -%}
  {%- assign featured_media = product.selected_or_first_available_variant.featured_media | default: product.featured_media -%}
  {%- capture description -%}
    <div class="product-single__description rte{% if template.suffix == 'quick_view' %} product-single__description--quickview custom-scrollbar{% endif %}"{% if template.suffix == 'quick_view' %} style="padding-right:5px;"{% endif %}>
      {{ product.description | replace: '<img src=','<img loading="lazy" src=' }}
    </div>
  {%- endcapture -%}
  {%- liquid
    assign sizechart_vendor_key = 'sc_vender_' | append: product.vendor | downcase | replace: ' ','_'
    assign sizechart_type_key = 'sc_vender_' | append: product.type | downcase | replace: ' ','_'
    if template.suffix != 'quick_view'
      if product.metafields.btt.size_chart != blank
        assign current_sizechart = product.metafields.btt.size_chart
      elsif product.metafields.btt[sizechart_type_key] != blank  
        assign current_sizechart = product.metafields.btt[sizechart_type_key]
      elsif product.metafields.btt[sizechart_vendor_key] != blank  
        assign current_sizechart = product.metafields.btt[sizechart_vendor_key]  
      elsif collection and collection.metafields.btt.size_chart and collection.metafields.btt.apply_size_chart_product
        assign current_sizechart = collection.metafields.btt.size_chart 
      elsif product.collections[0] and product.collections[0].metafields.btt.size_chart and product.collections[0].metafields.btt.apply_size_chart_product
        assign current_sizechart = product.collections[0].metafields.btt.size_chart  
      endif
    endif
    unless settings.enable_rtl and settings.rtl_language_codes contains request.locale.iso_code
      assign left_holder = 'left'
      assign right_holder = 'right'
      assign enable_rtl = false
    else
      assign left_holder = 'right'
      assign right_holder = 'left'
      assign enable_rtl = true
    endunless
    assign product_form_id = 'product-form-' | append: section.id
    assign has_popup_content = false
    assign has_quantity_box = false
    assign is_show_desc = false
    assign inline_button = true
    if layout_name == 'ver-images-scrolling'
      assign inline_button = false
    endif
    assign single_main_size = '(min-width: 992px) 50vw, 100vw'
    if layout_name != 'normal' or section.settings.large_images_grid
      assign single_main_size = '50w'
    endif
  -%}
  <div class="product-single pg row" data-product-handle="{{ product.handle }}" data-zoom-scope="{% if template.suffix == 'quick_view' %}quick_view{% else %}single{% endif %}" data-ignore-sold-out-text="1"{% if template.suffix != 'quick_view' %} data-history="1"{% endif %}{% if template.suffix != 'quick_view' %} data-sync-pg=".sc"{% endif %}>
    {%- if layout_name == 'normal' -%}
      <div class="col-xs-12 {% unless section.settings.large_images_grid %}col-md-6{% else %}col-md-7 no-gutter-left-mb no-gutter-right-mb{% endunless %}{% if enable_rtl %} f-right{% endif %}{% if section.settings.sticky_content == 'images' %} pos-sticky pos-sticky--{{ section.id }}{% endif %}{% if section.settings.large_images_grid %} gutter-ele-bottom-tbs{% endif %}">
        {%- render 'product-single-media' with product: product, featured_media: featured_media, large_images_grid: section.settings.large_images_grid, enable_rtl: enable_rtl, single_main_size: single_main_size -%}
      </div>
      <div class="col-xs-12 {% unless section.settings.large_images_grid %}col-md-6{% else %}col-md-5{% endunless %} gutter-ele-top-tbs{% if section.settings.sticky_content == 'information' %} pos-sticky pos-sticky--{{ section.id }}{% endif %}">
        {%- for block in section.blocks -%}
          {%- unless block.type == '@app' -%}
            {%- if block.type == 'size_chart' -%}
              {%- if template.suffix != 'quick_view' -%}
                {%- liquid
                  unless current_sizechart != blank
                    if block.settings.use_size_chart_fallback and block.settings.size_chart_fallback != blank
                      assign sizechart = block.settings.size_chart_fallback | img_url: 'master' | img_tag: block.settings.size_chart_fallback.alt, 'img-responsive'
                    elsif product.description contains 'sizechart-table'
                      assign sizechart = 'inline'    
                    endif
                  else
                    assign sizechart = current_sizechart
                  endunless
                -%}
                {%- render 'product-single-block-list' with current_variant: current_variant, block: block, sizechart: sizechart, enable_rtl: enable_rtl, left_holder: left_holder, right_holder: right_holder -%}
              {%- endif -%}
            {%- else -%}
              {%- if block.type == 'popup' -%}
                {%- if template.suffix != 'quick_view' -%}
                  {%- assign has_popup_content = true -%}
                  {%- assign popup_title = block.settings.page.title -%}
                  {%- assign popup_content = block.settings.page.content -%}  
                {%- endif -%}
              {%- elsif block.type == 'collapsible_tab_desc' or block.type == 'description' -%}
                {%- assign is_show_desc = true -%}
              {%- elsif block.type == 'quantity_buy_buttons' -%}
                {%- assign has_quantity_box = block.settings.show_quantity_selector -%}
              {%- endif -%}  
              {%- render 'product-single-block-list' with current_variant: current_variant, block: block, enable_rtl: enable_rtl, left_holder: left_holder, right_holder: right_holder, product_form_id: product_form_id, description: description, inline_button: inline_button -%}  
            {%- endif -%}
          {%- else -%}
            {%- render block -%}
          {%- endunless -%}
        {%- endfor -%}
        {%- if template.suffix == 'quick_view' and is_show_desc == false -%}
          <div class="gutter-ele-top gutter-ele-bottom">{{ description }}</div>
        {%- endif -%}
        {%- render 'product-single-view-details' -%}
        {% comment %} new Subscription box mobile design{% endcomment %}
        {%- comment -%}
        <div class="col-xs-12 col-md-6 gutter-ele-top-tbs new-design-mobile ">
          {% render 'subox-design' %}
        {%- endcomment -%}
        </div>
        {% comment %} new Subscription box mobile design {% endcomment %}
      </div>
    {%- elsif layout_name == 'ver-images-scrolling' -%}
      {%- assign youtubeCapture = '' -%}
      {%- assign vimeoCapture = '' -%}
      <div class="col-xs-12 col-md-8{% if enable_rtl %} f-right{% endif %}">
        <div class="row">
          <div class="col-xs-12 col-md-6{% unless enable_rtl %} f-right{% endunless %} no-gutter-left-mb no-gutter-right-mb gutter-ele-bottom-tbs">
            <div class="product-single__photos pg__mains scroll-touch-mobile-main pg__mains--grid por custom-scrollbar">
              {%- assign single_custom_class = 'grid__item grid__item--media por no-gutter' -%}
              {%- render 'product-single-main' with product: product, media: featured_media, lazyload: false, use_slider: false, no_gutter: true, custom_class: single_custom_class, show_media_btn_inner: true, is_active: true, single_main_size: single_main_size -%}
              {%- for media in product.media -%}
                {%- if media != featured_media -%}
                  {%- render 'product-single-main' with product: product, media: media,, lazyload: true, use_slider: false, custom_class: single_custom_class, no_gutter: true, show_media_btn_inner: true, is_active: false, single_main_size: single_main_size -%}
                {%- endif -%}
                {%- if media.media_type == 'external_video' -%}
                  {%- if media.host == 'youtube' -%}
                    {%- capture yt -%}{%- render 'product-single-capture-youtube' with product: product, media: media, ratio: ratio -%}{%- endcapture -%}
                    {%- assign youtubeCapture = youtubeCapture | append: yt -%}
                  {%- elsif media.host == 'vimeo' -%}
                    {%- capture vim -%}{%- render 'product-single-capture-vimeo' with product: product, media: media, video_id: media.external_id -%}{%- endcapture -%}
                    {%- assign vimeoCapture = vimeoCapture | append: vim -%}  
                  {%- endif -%}
                {%- endif -%}
              {%- endfor -%}
              {{ youtubeCapture }}
              {{ vimeoCapture }}
            </div>
          </div>
          {%- assign block_size = section.blocks | size -%}
          {%- if block_size > 0 -%}
          <div class="col-xs-12 col-md-6 pos-sticky pos-sticky--{{ section.id }} flex flex-align-ver gutter-ele-top-tbs">
            <div class="w100">
              {%- assign limit_1 = block_size | plus: 0.00 | divided_by: 2 | ceil | at_most: 5 | minus: 1 -%}
              {%- for i in (0..limit_1) -%}
                {%- assign block = section.blocks[i] -%}
                {%- unless block.type == '@app' or block.type contains 'collapsible' -%}
                  {%- if block.type == 'size_chart' -%}
                    {%- if template.suffix != 'quick_view' -%}
                      {%- liquid
                        unless current_sizechart != blank
                          if block.settings.use_size_chart_fallback and block.settings.size_chart_fallback != blank
                            assign sizechart = block.settings.size_chart_fallback | img_url: 'master' | img_tag: block.settings.size_chart_fallback.alt, 'img-responsive'
                          elsif product.description contains 'sizechart-table'
                            assign sizechart = 'inline'    
                          endif
                        else
                          assign sizechart = current_sizechart
                        endunless
                      -%}
                      {%- render 'product-single-block-list' with current_variant: current_variant, block: block, sizechart: sizechart, enable_rtl: enable_rtl, left_holder: left_holder, right_holder: right_holder -%}
                    {%- endif -%}
                  {%- else -%}
                    {%- if block.type == 'popup' -%}
                      {%- if template.suffix != 'quick_view' -%}
                        {%- assign has_popup_content = true -%}
                        {%- assign popup_title = block.settings.page.title -%}
                        {%- assign popup_content = block.settings.page.content -%}  
                      {%- endif -%}
                    {%- elsif block.type == 'collapsible_tab_desc' or block.type == 'description' -%}
                      {%- assign is_show_desc = true -%}
                    {%- elsif block.type == 'quantity_buy_buttons' -%}
                      {%- assign has_quantity_box = block.settings.show_quantity_selector -%}
                    {%- endif -%}  
                    {%- render 'product-single-block-list' with current_variant: current_variant, block: block, enable_rtl: enable_rtl, left_holder: left_holder, right_holder: right_holder, product_form_id: product_form_id, description: description, inline_button: inline_button -%}  
                  {%- endif -%}
                {%- elsif block.type == '@app' -%}
                  {%- render block -%}
                {%- endunless -%}
              {%- endfor -%}
            </div>
          </div>
          {%- endif -%}
        </div>
      </div>

      <div class="col-xs-12 col-md-4 gutter-ele-top-tbs pos-sticky pos-sticky--{{ section.id }} flex flex-align-ver">
        <div class="w100">
          {%- if block_size > 0 and limit_1 < block_size -%}
            {%- assign limit_1 = limit_1 | plus: 1 -%}
            {%- assign block_size = block_size | minus: 1 -%}
            {%- for i in (limit_1..block_size) -%}
              {%- assign block = section.blocks[i] -%}
              {%- unless block.type == '@app' or block.type contains 'collapsible' -%}
                {%- if block.type == 'size_chart' -%}
                  {%- if template.suffix != 'quick_view' -%}
                    {%- liquid
                      unless current_sizechart != blank
                        if block.settings.use_size_chart_fallback and block.settings.size_chart_fallback != blank
                          assign sizechart = block.settings.size_chart_fallback | img_url: 'master' | img_tag: block.settings.size_chart_fallback.alt, 'img-responsive'
                        elsif product.description contains 'sizechart-table'
                          assign sizechart = 'inline'    
                        endif
                      else
                        assign sizechart = current_sizechart
                      endunless
                    -%}
                    {%- render 'product-single-block-list' with current_variant: current_variant, block: block, sizechart: sizechart, enable_rtl: enable_rtl, left_holder: left_holder, right_holder: right_holder -%}
                  {%- endif -%}
                {%- else -%}
                  {%- if block.type == 'popup' -%}
                    {%- if template.suffix != 'quick_view' -%}
                      {%- assign has_popup_content = true -%}
                      {%- assign popup_title = block.settings.page.title -%}
                      {%- assign popup_content = block.settings.page.content -%}  
                    {%- endif -%}
                  {%- elsif block.type == 'collapsible_tab_desc' or block.type == 'description' -%}
                    {%- assign is_show_desc = true -%}
                  {%- elsif block.type == 'quantity_buy_buttons' -%}
                    {%- assign has_quantity_box = block.settings.show_quantity_selector -%}
                  {%- endif -%}  
                  {%- render 'product-single-block-list' with current_variant: current_variant, block: block, enable_rtl: enable_rtl, left_holder: left_holder, right_holder: right_holder, product_form_id: product_form_id, description: description, inline_button: inline_button -%}  
                {%- endif -%}
              {%- elsif block.type == '@app' -%}
                {%- render block -%}
              {%- endunless -%}
            {%- endfor -%}
          {%- endif -%}
        </div>
      </div>
    {%- elsif layout_name == 'hoz-images-scrolling' -%}
      {%- assign youtubeCapture = '' -%}
      {%- assign vimeoCapture = '' -%}
      <div class="col-xs-12">
        <div class="row flex"{% unless enable_rtl %} style="flex-flow:row-reverse wrap;"{% endunless %}>
          <div class="col-xs-12 col-sm-6 col-md-8{% unless enable_rtl %} f-right{% endunless %} no-gutter-left-mb no-gutter-right-mb gutter-ele-bottom-tbs">
            <div class="product-single__photos pg__mains pg__mains--scroll-hoz scroll-main-hoz por custom-scrollbar flex scroll-touch-mobile-main">
              {%- assign single_custom_class = 'pg__main--scroll-hoz por no-gutter' -%}
              {%- if product.media.size == 1 -%}
                {%- assign single_custom_class = single_custom_class | append: ' pg__main--scroll-hoz--full-mobile' -%}
              {%- endif -%}
              {%- render 'product-single-main' with product: product, media: featured_media, lazyload: false, use_slider: false, no_gutter: true, custom_class: single_custom_class, show_media_btn_inner: true, is_active: true, single_main_size: single_main_size -%}
              {%- for media in product.media -%}
                {%- if media != featured_media -%}
                  {%- render 'product-single-main' with product: product, media: media, lazyload: true, use_slider: false, no_gutter: true, custom_class: single_custom_class, show_media_btn_inner: true, is_active: false, single_main_size: single_main_size -%}
                {%- endif -%}
                {%- if media.media_type == 'external_video' -%}
                  {%- if media.host == 'youtube' -%}
                    {%- capture yt -%}{%- render 'product-single-capture-youtube' with product: product, media: media, ratio: ratio -%}{%- endcapture -%}
                    {%- assign youtubeCapture = youtubeCapture | append: yt -%}
                  {%- elsif media.host == 'vimeo' -%}
                    {%- capture vim -%}{%- render 'product-single-capture-vimeo' with product: product, media: media, video_id: media.external_id -%}{%- endcapture -%}
                    {%- assign vimeoCapture = vimeoCapture | append: vim -%}  
                  {%- endif -%}
                {%- endif -%}
              {%- endfor -%}
              {{ youtubeCapture }}
              {{ vimeoCapture }}
            </div>
          </div>
          <div class="col-xs-12 col-sm-6 col-md-4 flex flex-align-ver gutter-ele-top-tbs">
            {%- assign block_size = section.blocks | size -%}
            {%- assign hidden_blocks = '' -%}
            {%- if block_size > 0 -%}
              {%- assign opened_tag = true -%}
              {%- assign index = 1 -%}
              {%- assign block_size = block_size | minus: 1 -%}
              {%- assign limit_block_1 = block_size | at_most: 6 -%}
              {%- assign start_block_2 = limit_block_1 | plus: 1 -%}
              <div class="w100">
              {%- for block in section.blocks -%}
                {%- unless block.type == 'variant_picker' or block.type == 'quantity_buy_buttons' or block.type contains 'collapsible' -%}
                  {%- if index == 2 -%}
                    </div>
                    <div class="w100">
                    {%- assign opened_tag = true -%}
                  {%- endif -%}
                  {%- if index == start_block_2 -%}
                    </div>
                    <div class="hidden-xs hidden-sm w100">
                    {%- assign opened_tag = true -%}  
                  {%- endif -%}
                  {%- capture block_html -%}
                    {%- unless block.type == '@app' or block.type contains 'collapsible' -%}
                      {%- if block.type == 'size_chart' -%}
                        {%- if template.suffix != 'quick_view' -%}
                          {%- liquid
                            unless current_sizechart != blank
                              if block.settings.use_size_chart_fallback and block.settings.size_chart_fallback != blank
                                assign sizechart = block.settings.size_chart_fallback | img_url: 'master' | img_tag: block.settings.size_chart_fallback.alt, 'img-responsive'
                              elsif product.description contains 'sizechart-table'
                                assign sizechart = 'inline'    
                              endif
                            else
                              assign sizechart = current_sizechart
                            endunless
                          -%}
                          {%- render 'product-single-block-list' with current_variant: current_variant, block: block, sizechart: sizechart, enable_rtl: enable_rtl, left_holder: left_holder, right_holder: right_holder -%}
                        {%- endif -%}
                      {%- else -%}
                        {%- if block.type == 'popup' -%}
                          {%- if template.suffix != 'quick_view' -%}
                            {%- assign has_popup_content = true -%}
                            {%- assign popup_title = block.settings.page.title -%}
                            {%- assign popup_content = block.settings.page.content -%}  
                          {%- endif -%}
                        {%- elsif block.type == 'collapsible_tab_desc' or block.type == 'description' -%}
                          {%- assign is_show_desc = true -%}
                        {%- elsif block.type == 'quantity_buy_buttons' -%}
                          {%- assign has_quantity_box = block.settings.show_quantity_selector -%}
                        {%- endif -%}  
                        {%- render 'product-single-block-list' with current_variant: current_variant, block: block, enable_rtl: enable_rtl, left_holder: left_holder, right_holder: right_holder, product_form_id: product_form_id, description: description -%}  
                      {%- endif -%}
                    {%- elsif block.type == '@app' -%}
                      {%- render block -%}
                    {%- endunless -%}
                  {%- endcapture -%}
                  {{ block_html }}
                  {%- if index >= start_block_2 -%}
                    {%- assign hidden_blocks = hidden_blocks | append: block_html -%}
                  {%- endif -%}
                  {%- assign index = index | plus: 1 -%}
                {%- elsif block.type == 'variant_picker' or block.type == 'quantity_buy_buttons' -%}
                  {%- if block.type == 'variant_picker' -%}
                    {%- assign variant_picker_block = block -%}
                  {%- else -%}
                    {%- assign quantity_buy_buttons_block = block -%}  
                  {%- endif -%}
                {%- endunless -%}
              {%- endfor -%}
              {%- if opened_tag -%}
                </div>
              {%- endif -%}
            {%- endif -%}
          </div>
        </div>
      </div>

      {%- if quantity_buy_buttons_block != blank or variant_picker_block != blank -%}
      <div class="col-xs-12 gutter-top">
        <div class="pg__main-options pg__main-options--border flex flex-align-ver">
          {%- if variant_picker_block != blank -%}
            {%- unless product.has_only_default_variant -%}
            <div class="col-xs-12 col-md-4 pg__main-options__border-col">
              {%- render 'product-single-variants' with product: product -%}
            </div>
            {%- endunless -%}
          {%- endif -%}
          {%- if quantity_buy_buttons_block != blank -%}
          <div class="col-xs-12 col-md-8 pg__main-options__border-col">
            {%- render 'product-single-form' with product: product, current_variant: current_variant, full_qty_box: false, inline_button: true, left_holder: left_holder, obj: quantity_buy_buttons_block -%}
          </div>
          {%- endif -%}
        </div>
      </div>
      {%- endif -%}

      {%- if hidden_blocks != '' -%}
        <div class="col-xs-12 gutter-top hidden-md hidden-lg">
          <div class="pg__main-options--border">
            {{ hidden_blocks }}
          </div>
        </div>
      {%- endif -%}
    {%- endif -%}

    <script type="application/json" class="product-single-json" data-handle="{{ product.handle | escape }}" data-current-variant-id="{{ current_variant.id }}">
      {%- render 'product-tjson' with product: product -%}
    </script>
    <script type="application/json" id="ModelJson-{% if template.suffix != 'quick_view' %}{{ section.id }}{% else %}quickview-{{ product.handle | escape }}{% endif %}" class="model-json">
      {{ product.media | where: 'media_type', 'model' | json }}
    </script>
  </div>

{%- if template.suffix != 'quick_view' or request.design_mode -%}
  {%- if section.settings.sc_enable -%}
  {%- if current_variant.available -%}
    {%- unless settings.pre_order_enable and product.first_available_variant.inventory_policy == 'continue' and product.first_available_variant.inventory_quantity <= 0 -%}
      {%- assign cart_text = 'products.product.add_to_cart' | t -%}
    {%- else -%}
      {%- assign cart_text = 'products.product.pre_order' | t -%}
    {%- endunless -%}
  {%- else -%}
    {%- assign cart_text = 'products.product.sold_out' | t -%}  
  {%- endif -%}
  <div class="sc pg w100 hide" data-product-handle="{{ product.handle }}" data-ignore-sold-out-text="1" data-history="1" data-sync-pg=".product-single">
    {%- form 'product', product, data-productid: product.id, id: 'sc__form' -%}
<!-- Begin ReCharge code -->
{% if product.available %}{% render 'subscription-product' with product as product %}{% endif %}
<!-- End ReCharge code -->

      <div class="sc__inner container por center-block gutter-ele-top gutter-ele-bottom">
        <div class="row flex flex-align-ver">
          <div class="col-xs-3 col-sm-2 col-md-{%- unless product.has_only_default_variant -%}1{% else %}3{% endunless %} text-right hidden-xs hidden-sm">
            <div class="sc__image-wrap dib">
              <img data-src="{{ featured_media | img_url: '100x' }}"{% render 'img-one-pixel' %} 
                class="sc__image w100 pg__main-image img-responsive lazyload" 
                data-image-size="100x" 
                alt="{{ featured_media.alt | escape }}"/>
            </div>
          </div>
          <div class="col-xs-12 col-md-3 text-center tbs-text-left">
            {%- render 'product-single-variant-price' with current_variant as variant -%}
          </div>
          {%- unless product.has_only_default_variant -%}
          <div class="col-xs-12 col-md-3">
              {%- render 'product-group-variants' with product: product, enable_product_options: true, color_size: '60x', is_single_view: true, is_show_sub_info: false, is_single_sticky: true, force_dropdown_all: true -%}
          </div>
          {%- endunless -%}
          <div class="col-xs-12 col-md-{% unless product.has_only_default_variant %}5 sc__action-wrap{% else %}6{% endunless %}">
            <div class="sc__action text-left gutter-ele-top-tbs">
              <div class="product-form__item product-form__item--quantity flex w100">
                {%- if has_quantity_box -%}
                  <div class="qty-box qty-box--single qty-box--sticky flex flex-align-ver flex-align-space-between">
                    <button type="button" class="qty-box__ctrl qty-box__ctrl--descrease flex flex-align-hoz flex-align-ver" aria-label="button">
                      {%- render 'icon-minus' -%}
                    </button>
                    <input type="number" name="quantity" value="1" min="1" class="qty-box__input qty-box__input qty-box__input--sticky qty-box__input--sync qty-box__input--single w100 text-center h100" aria-label="form">
                    <button type="button" class="qty-box__ctrl qty-box__ctrl--increase flex flex-align-hoz flex-align-ver" aria-label="button">
                      {%- render 'icon-plus' -%}
                    </button>
