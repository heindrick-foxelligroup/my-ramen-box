{%- render 'section-background-start' -%}
<div class="product-template-section container{% if section.settings.full_width %}-fluid{% endif %}{% render 'section-gutters-nobkg' %}" id="ProductSection-{{ section.id }}" data-section-id="{{ section.id }}" data-section-type="product" data-enable-history-state="true">
	{%- render 'section-heading' -%}
	<div class="section__content">
		{%- assign product = all_products[section.settings.product] -%}
		{%- if product != blank -%}
      {%- liquid
        assign current_variant = product.selected_or_first_available_variant
        assign featured_media = product.selected_or_first_available_variant.featured_media | default: product.featured_media
        assign sizechart_vendor_key = 'sc_vender_' | append: product.vendor | downcase | replace: ' ','_'
        assign sizechart_type_key = 'sc_vender_' | append: product.type | downcase | replace: ' ','_'
        if template.suffix != 'quick_view'
          if product.metafields.btt.size_chart != blank
            assign current_sizechart = product.metafields.btt.size_chart
          elsif product.metafields.btt[sizechart_type_key] != blank  
            assign current_sizechart = product.metafields.btt[sizechart_type_key]
          elsif product.metafields.btt[sizechart_vendor_key] != blank  
            assign current_sizechart = product.metafields.btt[sizechart_vendor_key]  
          elsif collection and collection.metafields.btt.size_chart and collection.metafields.btt.apply_size_chart_product
            assign current_sizechart = collection.metafields.btt.size_chart 
          elsif product.collections[0] and product.collections[0].metafields.btt.size_chart and product.collections[0].metafields.btt.apply_size_chart_product
            assign current_sizechart = product.collections[0].metafields.btt.size_chart  
          endif
        endif
        unless settings.enable_rtl and settings.rtl_language_codes contains request.locale.iso_code
          assign left_holder = 'left'
          assign right_holder = 'right'
          assign enable_rtl = false
        else
          assign left_holder = 'right'
          assign right_holder = 'left'
          assign enable_rtl = true
        endunless
        assign product_form_id = 'product-form-' | append: section.id
        assign has_popup_content = false
        assign has_quantity_box = false
        assign is_show_desc = false
        assign inline_button = true
      -%}
      {%- capture description -%}
        <div class="product-single__description rte">
          {{ product.description | replace: '<img src=','<img loading="lazy" src=' }}
        </div>
      {%- endcapture -%}
		  <div class="product-single pg row" data-product-handle="{{ product.handle }}" data-zoom-scope="single" data-ignore-sold-out-text="1">
        <div class="col-xs-12 {% unless section.settings.large_images_grid %}col-md-6{% else %}col-md-7{% endunless %}{% if enable_rtl %} f-right{% endif %}{% if section.settings.sticky_content == 'images' %} pos-sticky pos-sticky--{{ section.id }}{% endif %}{% if section.settings.large_images_grid %} gutter-ele-bottom-tbs{% endif %}">
          {%- render 'product-single-media' with product: product, featured_media: featured_media, large_images_grid: section.settings.large_images_grid, enable_rtl: enable_rtl -%}
        </div>
        <div class="col-xs-12 {% unless section.settings.large_images_grid %}col-md-6{% else %}col-md-5{% endunless %} gutter-ele-top-tbs{% if section.settings.sticky_content == 'information' %} pos-sticky pos-sticky--{{ section.id }}{% endif %}">
          {%- for block in section.blocks -%}
            {%- unless block.type == '@app' -%}
              {%- if block.type == 'size_chart' -%}
                {%- if template.suffix != 'quick_view' -%}
                  {%- liquid
                    unless current_sizechart != blank
                      if block.settings.use_size_chart_fallback and block.settings.size_chart_fallback != blank
                        assign sizechart = block.settings.size_chart_fallback | img_url: 'master' | img_tag: block.settings.size_chart_fallback.alt, 'img-responsive'
                      elsif product.description contains 'sizechart-table'
                        assign sizechart = 'inline'    
                      endif
                    else
                      assign sizechart = current_sizechart
                    endunless
                  -%}
                  {%- render 'product-single-block-list' with product:product, current_variant: current_variant, block: block, sizechart: sizechart, enable_rtl: enable_rtl, left_holder: left_holder, right_holder: right_holder -%}
                {%- endif -%}
              {%- else -%}
                {%- if block.type == 'popup' -%}
                  {%- if template.suffix != 'quick_view' -%}
                    {%- assign has_popup_content = true -%}
                    {%- assign popup_title = block.settings.page.title -%}
                    {%- assign popup_content = block.settings.page.content -%}  
                  {%- endif -%}
                {%- elsif block.type == 'collapsible_tab_desc' or block.type == 'description' -%}
                  {%- assign is_show_desc = true -%}
                {%- elsif block.type == 'quantity_buy_buttons' -%}
                  {%- assign has_quantity_box = block.settings.show_quantity_selector -%}
                {%- endif -%}  
                {%- render 'product-single-block-list' with product: product, current_variant: current_variant, block: block, enable_rtl: enable_rtl, left_holder: left_holder, right_holder: right_holder, product_form_id: product_form_id, description: description, inline_button: inline_button -%}  
              {%- endif -%}
            {%- else -%}
              {%- render block -%}
            {%- endunless -%}
          {%- endfor -%}
          {%- if template.suffix == 'quick_view' and is_show_desc == false -%}
            <div class="gutter-ele-top gutter-ele-bottom">{{ description }}</div>
          {%- endif -%}
          {%- render 'product-single-view-details' -%}
        </div>
			</div>
    {%- else -%}
      {% render 'no-blocks' %}  
		{%- endif -%}
	</div>
  <script type="application/json" id="ModelJson-{{ section.id }}">
    {{ product.media | where: 'media_type', 'model' | json }}
  </script>
</div>
{%- if sizechart and sizechart != 'inline' -%}
<div class="modal fade sizeChartModal sizeChartModal{{ section.id }} hide" tabindex="-1" role="dialog" id="sizeChartModal{{ section.id }}">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" data-dismiss="modal" aria-label="Close" class="close">{% include 'icon-close' %}</button>
      </div>
      <div class="modal-body">
        <div class="rte">
          {{ sizechart }}
        </div>
      </div>
    </div>  
  </div>  
</div>  
{%- endif -%}
{%- if has_popup_content -%}
<div class="modal fade productPopupModal productPopupModal{{ section.id }} product-page-modal" tabindex="-1" role="dialog" id="productPopupModal{{ section.id }}">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" data-dismiss="modal" aria-label="Close" class="close">{% render 'icon-close' %}</button>
      </div>
      <div class="modal-body">
        <h2 style="margin-top:0;">{{ popup_title }}</h2>
        <div class="rte">
          {{ popup_content }}
        </div>
      </div>
    </div>  
  </div>  
</div>  
{%- endif -%}
