<div class="main-product-tabs-section container{% render 'wide-css-class' %}{% render 'section-gutters-nobkg' %}" id="main-product-tabs-{{ section.id }}" data-section-id="{{ section.id }}" data-section-type="main-product-tabs">
  {%- if section.blocks.size > 0 or product.metafields.btt.customtabs != blank -%}
    {%- render 'product-single-tabs-content' -%}
  {%- endif -%}
</div>
{%- style -%}
  a.nav__link-single--{{ section.id }} {
    color: {{ section.settings.tab_item_color_single }};
    font-size: {{ section.settings.fs_tab_item_single_mobile }}px;
  }
  .nav-tab-item--single-{{ section.id }}.active .nav__link-single {
    color: {{ section.settings.tab_item_active_color_single }};
    border-bottom: 1px solid {{ section.settings.tab_item_active_color_single }};
    padding-bottom: 10px;
  }
  @media(max-width: 991px) {
    .tab-accordion__trigger--{{ section.id }} {
      font-size: {{ section.settings.fs_tab_item_single_mobile }}px;
    }
    .tab-accordion__trigger--{{ section.id }}.open {
      color: {{ section.settings.tab_item_active_color_single }}!important;
    }
  }
  
  @media(min-width: 992px) {
    .nav-tabs--single-{{ section.id }} {
      justify-content: center;
    }
    a.nav__link-single--{{ section.id }} {
      font-size: {{ section.settings.fs_tab_item_single }}px;
    }
  }
  @media(min-width: 1024px){
    .nav-tab-item--single-{{ section.id }}:not(.active) .nav__link-single {
      transition: border-bottom .3s ease;
      padding-bottom: 10px;
      border-bottom: 1px solid transparent;
    }
    .nav-tab-item--single-{{ section.id }}:not(.active) .nav__link-single:hover {
      color: {{ section.settings.tab_item_active_color_single }};
      border-bottom-color: {{ section.settings.tab_item_active_color_single }};
    }
  }
{%- endstyle -%}
{% schema %}
{
	"name": "Main product - Tabs",
	"tag": "section",
	"templates": ["product"],
  "settings": [
  	{
      "type": "header",
      "content": "Section Gutters"
    },
    {
      "type": "checkbox",
      "id": "top_gutter",
      "label": "Enable top gutter",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "bottom_gutter",
      "label": "Enable bottom gutter",
      "default": true
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "tab_item_color_single",
      "label": "Tab title color",
      "default": "#000"
    },
    {
      "type": "color",
      "id": "tab_item_active_color_single",
      "label": "Tab title color hover or active",
      "default": "#000"
    },
    {
      "type": "header",
      "content": "Font sizes"
    },
    {
      "type": "range",
      "id": "fs_tab_item_single",
      "label": "Tab title font size",
      "min": 10,
      "max": 100,
      "step": 1,
      "default": 17,
      "unit": "px" 
    },
    {
      "type": "range",
      "id": "fs_tab_item_single_mobile",
      "label": "Tab title font size in mobile",
      "min": 10,
      "max": 100,
      "step": 1,
      "default": 14,
      "unit": "px" 
    }
  ],
  "blocks": [
    {
      "name": "Product description tab",
      "type": "tab_item_desc",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Tab title",
          "default": "Description"
        },
        {
          "type": "paragraph",
          "content": "This tab item will show the product description automatically."
        }
      ]
    },
    {
      "name": "Review tab",
      "type": "tab_item_review",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Tab title",
          "default": "Reviews"
        },
        {
          "type": "paragraph",
          "content": "This tab item will show the product review automatically base on your configuration in Theme Settings > Product Settings > Review app."
        }
      ]
    },
    {
      "name": "Text tab",
      "type": "tab_item_text",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Tab title",
          "default": "Heading"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "Tab content"
        },
        {
          "type": "page",
          "id": "page",
          "label": "Tab content from page"
        }
      ]
    },
    {
      "name": "From Toolkit app",
      "type": "tab_item_toolkit",
      "limit": 1,
      "settings": [
        {
          "type": "paragraph",
          "content": "Show the tabs for a certain product. These tabs have been managed in the Boostheme Toolkit app. Please refer to [this guide](https://beloria-docs.boostheme.com/shopify-apps/boostheme-toolkit-app#4-edit-custom-tabs) for more details."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Main product - Tabs",
      "blocks": [
        {
          "type": "tab_item_desc"
        },
        {
          "type": "tab_item_review"
        },
        {
          "type": "tab_item_text"
        }
      ]
    }
  ]
}
{% endschema %}